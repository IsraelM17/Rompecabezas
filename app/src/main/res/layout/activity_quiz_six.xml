<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    tools:context="com.example.israel.rompecabezas.QuizSix">

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:gravity="center"
        android:fontFamily="@font/walkway_black"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:layout_row="3"
        android:alignmentMode="alignBounds"
        android:layout_below="@id/chronometer"
        android:foregroundGravity="center"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/img6_1"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />

        <ImageView
            android:id="@+id/img6_2"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />

        <ImageView
            android:id="@+id/img6_3"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />

        <ImageView
            android:id="@+id/img6_4"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />

        <ImageView
            android:id="@+id/img6_5"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />

        <ImageView
            android:id="@+id/img6_6"
            android:layout_height="110dp"
            android:layout_width="165dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            />
    </GridLayout>
</RelativeLayout>